{
  "short_name": "Aqua Wallet",
  "name": "Aqua Wallet",
  "description": "A crypto wallet for using the blockchain.",
  "manifest_version": 3,
  "version": "1.0",
  "action": {
      "default_popup": "index.html",
      "default_title": "Open Wallet"
  },
  "content_scripts": [
    {
        "matches": ["http://*/*", "https://*/*"],
        "js": ["./static/js/content.js"]
    }
 ],
  "permissions": [
    "activeTab"
  ],
  "icons": {
      "16": "logo512.png",
      "48": "logo512.png",
      "128": "logo512.png"
  }
}
